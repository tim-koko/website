{
  "name": "@im-koko/website",
  "description": "Tim-Koko Website",
  "version": "1.9.1",
  "browserslist": [
    "defaults"
  ],
  "repository": "https://github.com/tim-koko/website",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "init": "shx rm -rf .git && git init -b main",
    "create": "hugo new",
    "prestart": "npm run clean",
    "start": "hugo server --logLevel info  --bind=0.0.0.0 --disableFastRender --baseURL=http://localhost",
    "prebuild": "npm run clean",
    "build": "hugo --gc --minify",
    "build:preview": "npm run build -D -F",
    "clean": "shx rm -rf public resources",
    "clean:install": "shx rm -rf package-lock.json node_modules ",
    "lint": "npm run -s lint:scripts && npm run -s lint:styles && npm run -s lint:markdown",
    "lint:scripts": "eslint assets/js config functions",
    "lint:styles": "stylelint \"assets/scss/**/*.{css,sass,scss,sss,less}\"",
    "lint:markdown": "markdownlint-cli2 \"*.md\" \"content/**/*.md\"",
    "lint:markdown-fix": "markdownlint-cli2-fix \"*.md\" \"content/**/*.md\"",
    "server": "hugo server",
    "server:no-cache": "hugo server --disableFastRender",
    "test": "npm run -s lint",
    "env": "env",
    "precheck": "npm version",
    "check": "hugo version",
    "latest:hugo": "gh release view --repo gohugoio/hugo",
    "copy:katex-fonts": "shx cp ./node_modules/katex/dist/fonts/* ./static/fonts/",
    "version": "auto-changelog -p && git add CHANGELOG.md"
  },
  "devDependencies": {
    "@babel/cli": "^7.17",
    "@babel/core": "^7.17",
    "@babel/preset-env": "^7.16",
    "@fullhuman/postcss-purgecss": "^7.0",
    "@thulite/images": "^3.3.3",
    "@popperjs/core": "^2.11",
    "auto-changelog": "^2.4",
    "autoprefixer": "^10.4",
    "bootstrap": "^5.3",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "hugo-extended": "^0.152.2",
    "lazysizes": "^5.3",
    "markdownlint-cli2": "^0.20.0",
    "postcss": "^8.4",
    "postcss-cli": "^11.0",
    "purgecss-whitelister": "^2.4",
    "quicklink": "^3.0.1",
    "shx": "^0.3",
    "stylelint": "^14.3",
    "stylelint-config-standard-scss": "^6.1"
  },
  "dependencies": {
    "@lottiefiles/dotlottie-web": "^0.58.1",
    "@swup/body-class-plugin": "^3.3.0",
    "@swup/debug-plugin": "^4.1.0",
    "@swup/head-plugin": "^2.3.1",
    "animejs": "^4.2.2",
    "headroom.js": "^0.12.0",
    "scroll-out": "^2.2.12",
    "swiper": "^12.0.3",
    "swup": "^4.8.2"
  }
}
